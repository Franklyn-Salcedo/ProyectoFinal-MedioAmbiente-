<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp"
    android:layout_marginBottom="8dp"
    android:background="@drawable/rounded_background">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/developerImageView"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_launcher_background"
        app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.CornerSize50Percent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/developerNameTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="Nombre y Apellido"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/green_primary"
        app:layout_constraintStart_toEndOf="@id/developerImageView"
        app:layout_constraintTop_toTopOf="@id/developerImageView"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/developerMatriculaTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="4dp"
        android:text="Matrícula: 123456789"
        android:textSize="16sp"
        android:textColor="@color/black"
        app:layout_constraintStart_toEndOf="@id/developerImageView"
        app:layout_constraintTop_toBottomOf="@id/developerNameTextView"
        app:layout_constraintEnd_toEndOf="parent" />

    <LinearLayout
        android:id="@+id/contactLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toEndOf="@id/developerImageView"
        app:layout_constraintTop_toBottomOf="@id/developerMatriculaTextView"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageButton
            android:id="@+id/phoneButton"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_phone"
            android:contentDescription="Llamar por teléfono" />

        <ImageButton
            android:id="@+id/telegramButton"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginStart="16dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_telegram"
            android:contentDescription="Enviar mensaje por Telegram" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>