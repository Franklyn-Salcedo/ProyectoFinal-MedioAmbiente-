<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/background_light"
    tools:context=".activities.AboutUsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:gravity="center_horizontal">


        <TextView
            android:id="@+id/aboutUsTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sobre Nosotros"
            android:textAlignment="center"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="@android:color/holo_green_dark"
            android:layout_marginBottom="24dp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:layout_marginBottom="16dp">

            <TextView
                android:id="@+id/historyTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nuestra Historia"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"/>

            <TextView
                android:id="@+id/historyTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Desde nuestra fundación en el año 2000, el Ministerio de Medio Ambiente ha trabajado incansablemente para proteger los recursos naturales del país y promover el desarrollo sostenible. Hemos liderado iniciativas clave en reforestación, conservación de especies en peligro y educación ambiental."
                android:textSize="16sp"
                android:lineSpacingExtra="4dp"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:layout_marginBottom="16dp">

            <TextView
                android:id="@+id/missionTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nuestra Misión"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"/>

            <TextView
                android:id="@+id/missionTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Garantizar la protección y el uso sostenible de los ecosistemas, la biodiversidad y los recursos naturales, a través de políticas públicas eficientes y la participación activa de la ciudadanía, para el bienestar de las futuras generaciones."
                android:textSize="16sp"
                android:lineSpacingExtra="4dp"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:layout_marginBottom="16dp">

            <TextView
                android:id="@+id/visionTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nuestra Visión"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"/>

            <TextView
                android:id="@+id/visionTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Ser una institución líder a nivel nacional e internacional, reconocida por su excelencia en la gestión ambiental y por su capacidad de innovar para enfrentar los desafíos del cambio climático y la conservación de la naturaleza."
                android:textSize="16sp"
                android:lineSpacingExtra="4dp"/>
        </LinearLayout>


        <TextView
            android:id="@+id/videoTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Video Explicativo"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:layout_marginBottom="8dp"/>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@android:color/darker_gray"
            android:layout_marginBottom="24dp"
            android:clipToOutline="true">

            <com.pierfrancescosoffritti.androidyoutubeplayer.core.player.views.YouTubePlayerView
                android:id="@+id/youtube_player_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <ProgressBar
                android:id="@+id/videoProgressBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:visibility="visible"
                style="?android:attr/progressBarStyleLarge" />
        </FrameLayout>


        <Space
            android:layout_width="match_parent"
            android:layout_height="16dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:layout_marginBottom="16dp">

            <TextView
                android:id="@+id/beeTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Importancia de las Abejas"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"/>

            <TextView
                android:id="@+id/beeDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Las abejas son esenciales para la vida en la Tierra porque cumplen un papel clave en la polinización, proceso mediante el cual muchas plantas pueden reproducirse. Gracias a ellas se producen gran parte de los frutos, verduras y semillas que consumimos. Sin abejas, los ecosistemas se verían gravemente afectados: muchas plantas desaparecerían, lo que provocaría la falta de alimento para animales y seres humanos. En consecuencia, la biodiversidad y el equilibrio natural se perderían. Por eso se dice que sin abejas, no hay vida."
                android:textSize="16sp"
                android:lineSpacingExtra="4dp"/>
        </LinearLayout>


        <com.google.android.material.button.MaterialButton
            android:id="@+id/backToHomeButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Volver al Inicio"
            style="@style/Widget.MaterialComponents.Button"
            android:textAllCaps="false"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="32dp"
            app:cornerRadius="16dp"/>

    </LinearLayout>
</ScrollView>
