            android:exported="false" />
        <activity
            android:name="com.medioambiente.activities.EquipoActivity"
            android:exported="false" />
        <activity
            android:name="com.medioambiente.activities.MiembroDetailActivity"
            android:exported="false" />
        <activity
            android:name="com.medioambiente.activities.MapaActivity"
            android:exported="false" />
        <activity
            android:name="com.medioambiente.activities.AcercaActivity"
            android:exported="false" />
        <activity
            android:name="com.medioambiente.activities.VoluntarioActivity"
