        <activity
            android:name="com.medioambiente.activities.ServicesActivity"
            android:exported="false" />
        <activity
            android:name="com.medioambiente.activities.NewsActivity"
            android:exported="false" />
        <activity
            android:name="com.medioambiente.activities.NewsDetailsActivity"
            android:exported="false" />
